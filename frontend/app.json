{
  "expo": {
    "name": "AeroLogix AI",
    "slug": "aerologix-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "aerologix",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tonnom.aerologix",
      "buildNumber": "9",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "AeroLogix AI utilise la caméra pour scanner vos documents de maintenance aéronautique et extraire les informations via OCR.",
        "NSPhotoLibraryUsageDescription": "AeroLogix AI accède à votre galerie photo pour sélectionner des documents de maintenance à analyser."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1E3A8A"
      },
      "package": "com.tonnom.aerologix"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E3A8A"
        }
      ],
      "expo-font",
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "https://aerologix-ai-mobile.onrender.com",
      "eas": {
        "projectId": "4b010684-347e-4c92-b8d4-cc6dcb721019"
      }
    }
  }
}
