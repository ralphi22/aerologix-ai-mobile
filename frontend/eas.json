{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "node": "18.18.0"
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "node": "18.18.0"
    },
    "testflight": {
      "distribution": "store",
      "ios": {
        "simulator": false
      },
      "node": "18.18.0"
    },
    "production": {
      "distribution": "store",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "node": "18.18.0"
    }
  },
  "submit": {
    "production": {}
  }
}
